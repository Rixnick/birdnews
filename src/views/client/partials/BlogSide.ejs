<div class="col-lg-4">
  <div class="blog_right_sidebar">
    <aside class="single_sidebar_widget search_widget">
      <form action="#">
        <div class="form-group">
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="ຄົ້ນຫາ..."
              onfocus="this.placeholder = ''"
              onblur="this.placeholder = ''"
            />
            <div class="input-group-append">
              <button class="btns" type="button">
                <i class="ti-search"></i>
              </button>
            </div>
          </div>
        </div>
        <button
          class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
          type="submit"
        >
          Search
        </button>
      </form>
    </aside>

    <aside class="single_sidebar_widget post_category_widget">
      <h4 class="widget_title">ປະເພດຂ່າວບົດຄວາມຕ່າງໆ</h4>
      <ul class="list cat-list">
        <% categories.forEach(function(cat){ %>
          <li>
            <a href="#" class="d-flex">
              <p><%= cat.title %></p>
              <p>(15)</p>
            </a>
          </li>
        <% }) %>
      </ul>
    </aside>

    <aside class="single_sidebar_widget popular_post_widget">
      <h3 class="widget_title">ຂ່າວລ່າສຸດ</h3>
      <% news.forEach(function(newinfo) { %>
        <div class="media post_item">
          <img src="data:image/<%= newinfo.image.contentType%>;base64, <%= newinfo.image.data.toString('base64')%>" alt="post" width="65px" height="65px" />
          <div class="media-body">
            <a href="/blogs/:id">
              <h3><%= newinfo.title %></h3>
            </a>
            <p><%= newinfo.createAt.toLocaleDateString() %></p>
          </div>
        </div>
      <% }) %>
    </aside>

    <aside class="single_sidebar_widget tag_cloud_widget">
      <h4 class="widget_title">ຫມວດຂ່າວສານຕ່າງໆ</h4>
      <ul class="list">
        <% tags.forEach(function(tag){ %>
          <li>
            <a href="#"><%= tag.title %></a>
          </li>
        <% }) %>
      </ul>
    </aside>

