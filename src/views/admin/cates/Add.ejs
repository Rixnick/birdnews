<%- include('../layouts/Header')%>
<%- include('../layouts/Navigation')%>
<%- include('../layouts/Sidebar')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Create Category Form</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/cats">ກັບຄືນ</a></li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

   <!-- Main content -->
   <section class="content">
    <div class="container-fluid">
       <!-- general form elements -->
       <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Category Form</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/admin/cats/add-cate" method="post">
          <div class="card-body">
            <div class="row">
              <div class="form-group col-md-6 mb-4">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title" required>
              </div>

              <div class="form-group col-md-6 mb-4">
                <label for="desc">Description:</label>
                <input type="text" class="form-control" id="desc" name="desc" placeholder="Enter Title" required>
              </div>
            </div>
        
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
 
<%- include('../layouts/Footer')%>