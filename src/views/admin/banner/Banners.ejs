<%- include('../layouts/Header')%>
<%- include('../layouts/Navigation')%>
<%- include('../layouts/Sidebar')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">ຜູ້ສະຫນັບຫນູນ</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/banners/get-add-banner">ເພີ່ມໃຫມ່</a></li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

   <!-- Main content -->
   <section class="content">
     <!-- <p></p> -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">ຜູ້ສະຫນັບຫນູນທັງຫມົດ</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Image</th>
                  <th>Name:</th>
                  <th>Types Base:</th>
                  <th>Site URL:</th>
                  <th>Contact Service:</th>
                  <th>Package Price:</th>
                  <th>Expiry Date:</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                  <% banners.forEach(function(banner){ %>
                    <tr>
                      <td>
                        <img src="data:image/<%= banner.image.contentType%>;base64, <%= banner.image.data.toString('base64')%>" alt="" width="105px" height="95px">
                      </td>
                      <td><%= banner.name %></td>
                      <td><%= banner.types %></td>
                      <td><%= banner.webs %></td>
                      <td><%= banner.contact %></td>
                      <td>200$</td>
                      <td><%= banner.expired.toLocaleDateString() %></td>
                      <td>
                        <a href="/admin/banners/view/<%= banner.id %>">Edit</a>
                        <a class="confirmDetetion" href="/admin/banners/delete-banner/<%= banner.id %>">Delete</a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>  
<%- include('../layouts/Footer')%>