<%- include('../layouts/Header')%>
<%- include('../layouts/Navigation')%>
<%- include('../layouts/Sidebar')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">ຂ່າວດ່ວນ</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/news/add-news">ສ້າງຂ່າວດ່ວນໃຫມ່</a></li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

   <!-- Main content -->
   <section class="content">
     <!-- <p></p> -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">ຂ່າວດ່ວນທັງຫມົດ</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Image</th>
                  <th>Title</th>
                  <th>Subtitle</th>
                  <th>Category</th>
                  <th>Tags</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                  <% news.forEach(function(newinfo){ %>
                    <tr>
                      <td>
                        <img src="data:image/<%= newinfo.image.contentType%>;base64, <%= newinfo.image.data.toString('base64')%>" alt="" width="105px" height="95px">
                      </td>
                      <td><%= newinfo.title %></td>
                      <td><%= newinfo.subtitle %></td>
                      <td><%= newinfo.category %></td>
                      <td><%= newinfo.tag %></td>
                      <td>
                        <a href="/admin/news/view/<%= newinfo._id%>">Edit</a>
                        <a class="confirmDetetion" href="/admin/news/delete/<%= newinfo._id%>">Delete</a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>  
<%- include('../layouts/Footer')%>